@page "/createArmy"
@inject HttpClient Http
@using ArmyStarter.Models;

<ArmyPlanLayout PlanArmy="@NewArmyPlan" />

@code {
    private PlanArmy _newArmyPlan;
    public PlanArmy NewArmyPlan
    {
        get
        {
            if (_newArmyPlan == null)
            {
                _newArmyPlan = new PlanArmy();
                _newArmyPlan.PlanUnits = new List<PlanUnit>();
            }

            return _newArmyPlan;
        }
    }
}
